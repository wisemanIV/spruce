<h1>Listing links</h1>

<table>
  <tr>
    <th>Url</th>
    <th>Username</th>
	<th>Followers</th>
	<th>Favorited</th>
	<th>Retweeted</th>
	<th>FB Like count</th>
	<th>FB Comment count</th>
	<th>FB Share count</th>
	<th>FB Total count</th>
	<th>Created at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><a href='<%= link.url %>'><%= link.url %></a></td>
    <td><%= link.username %></td>
	<td><%= link.follower_count %></td>
	<td><%= link.favorite_count %></td>
	<td><%= link.retweet_count %></td>
	<td><%= link.fb_like_count %></td>
	<td><%= link.fb_comment_count %></td>
	<td><%= link.fb_share_count %></td>
	<td><%= link.fb_total_count %></td>
	<td><%= link.created_at %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

