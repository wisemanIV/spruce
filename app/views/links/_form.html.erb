<%= form_for @link, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :actual_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :actual_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :klout_score, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :klout_score, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :viewed, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :viewed, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :user_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :status_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                links_path, :class => 'btn' %>
  </div>
<% end %>
